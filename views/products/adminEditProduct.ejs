        <section class="profile admin-product pt-40" style="background-color: #fbfbfb; padding-bottom: 40px;">
            <div class="container">
                <div class="edit-Image">
                    <img class="center-edit" src="/upload/<%= item.productImage %> " alt="">
                </div>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="fas fa-tag"></i> Editar información</h5>
                    </div>
                    <div class="card-body py-4">
                        <form action="/products/add.html" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="name">Nombre</label>
                                    <input class="form-control" required="required" name="name" type="text" id="name" value= "<%= item.name %>"  >
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="category">Categoria</label>
                                    <select required="required" name="category" id="category" name="category" required>
                                        <option value="tazas" <% if (item.category == "tazas"){%>selected<% } %> >Tazas</option>
                                        <option value="termos" <% if (item.category == "termos"){%>selected<% } %> >Termos</option>
                                        <option value="gorras" <% if (item.category == "gorras"){%>selected<% } %> >Gorras</option>
                                        <option value="playeras" <% if (item.category == "playeras"){%>selected<% } %> >Playeras</option>
                                        <option value="llaveros" <% if (item.category == "llaveros"){%>selected<% } %> >Llaveros</option>
                                        <option value="rompecabezas" <% if (item.category == "rompecabezas"){%>selected<% } %> >Rompecabezas</option>
                                        <option value="especiales" <% if (item.category == "especiales"){%>selected<% } %> >Especiales</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="price">Precio</label>
                                    <input class="form-control" required="required" name="price" type="text" id="price"
                                        required value="<%= item.price %>">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="quantity">Cantidad</label>
                                    <input class="form-control" name="quantity" type="text" id="quantity" required value="<%= item.quantity %>">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="product-image">Imagen</label>
                                    <input class="form-control" name="image" type="file" id="product-image"
                                        style="padding: 3px;" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="description">Descripción</label>
                                    <input class="form-control" name="description" type="text" id="description"
                                        required value="<%= item.description %>">
                                </div>
                            </div>
                            <input class=" form-comtrol btn btn-primary profile-submit" type="submit" value="Guardar cambios">
                            <a class=" form-comtrol btn btn-primary profile-submit" href="/admin/showproduct.html" style="float: right;">Regresar</a>
                        </form>
                    </div>
                </div>
            </div>
        </section>

