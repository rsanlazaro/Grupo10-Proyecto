<!DOCTYPE html>
<%- include("../partials/header.ejs") %>

<body>    
    <section class="py-5">  
        <div class="container">
            <div class="row">
                <div class="col-md-7  col-sm-8">
                    <div class="row justify-content-between  pb-2">
                        <div class="col-md-5 col-sm-8">
                            <h2>Mi carrito</h2>
                        </div>
                        <div class="col-md-5 col-sm-8">
                            <h6 class=" m-0 pt-3 text-muted"></h6>
                        </div>
                    </div>
                    <div class="row py-5 border-top"  id="data">
                            <%if(locals.itemsCount>0){ %>
                                <% products.forEach(item => { %>
                                    <div class="col-md-4  col-sm-8 my-2">
                                                <img src="/assets/img/products/<%=item.productImage%>" class="w-100" alt="">
                                            </div>
                                            <div class="col-md-8 pt-4  col-sm-8">
                                                <h3 class="price">$<%=item.price%></h3>
                                                <p class="py-2"><%=item.description%></p>
                                                <a href="/product/cart/delete/<%=item.productID%>" class="btn">Eliminar</a>
                                    </div>
                                <%})}%> 
                    </div>
                    
                </div>
                <div class="col-md-1">
                </div>
                <div class="col-md-4 col-sm-8">
                    <div class="pb-2">
                        <div class="col-md-8 pb-2">
                            <h2>Total</h2>
                        </div>
                        <div class="py-3 border-top">
                            <div class=" row justify-content-around my-2">
                                <div class="col-md-8  col-6">
                                    <h6 class="price">Subtotal</h6>
                                    $<%=totalprice%>
                                </div>
                                <div class="col-md-2 col-4">
                                    <h6 id="total"></h6>
                                </div>
                            </div>
                           
                            <div>
                                <button class="btn my-2 w-100">Continuar con la compra</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        </div>
    </section>
    <script src="/assets/js/addDataToCart.js"></script>

</body>
<%- include("../partials/footer.ejs") %>
   
</html>

