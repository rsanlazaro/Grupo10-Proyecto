<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Inicio de Sesión</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/assets/css/fontawesome-all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!--bootstrap-->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/assets/css/icheck-bootstrap.min.css">
    <!-- custom style -->
    <link rel="stylesheet" href="/assets/css/auth.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/custom.css">
    <link rel="stylesheet" href="/assets/css/styleRegister.css">
</head>

<body class="hold-transition login-page auth-background">
    <div class="login-box">
        <div class="login-logo">
            <a href="/home"><img src="/assets/img/bdl/logo.png" alt="logo" width="40%"></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">

            <p class="login-box-msg">Registrate para Iniciar Sesión</p>
                <%if(locals.errors && errors.password_confirmation_2) { %>
                   <div class="alert alert-danger" role="alert">
                     <%= errors.password_confirmation_2.msg %>
                    </div>
                    <%}%>
                    <%if(locals.errors && errors.email_2) { %>
                        <div class="alert alert-danger" role="alert">
                          <%= errors.email_2.msg %>
                         </div>
                         <%}%>
                            <form action="/user/register" method = "POST" id="formRegister">
                                <div class="validateName validationError"></div>        
                                       <div class="input-group mb-3">
                                            <input type="text" name="userName" class="form-control" id="name"
                                                value="<%= locals.oldData ? oldData.userName : null %>" required>
                                            <label for="name">Nombre</label>
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-user"></span>
                                                </div>
                                            </div>
                                            <% if (locals.errors && errors.userName) { %>
                                                <div class="text-danger">
                                                    <%= errors.userName.msg %> 
                                                </div>
                                            <% } %>    
                                        </div>
                                        <div class="validateEmail validationError"></div>
                                                <div class="input-group mb-3">
                                                    <input type="email" name="email" class="form-control" id="email"
                                                        value="<%= locals.oldData ? oldData.email : null %>" autocomplete="off" required>
                                                    <label for="email">Correo</label>
                                                    <div class="input-group-append">
                                                        <div class="input-group-text">
                                                            <span class="fas fa-envelope"></span>
                                                        </div>
                                                     </div> 
                                                     <% if (locals.errors && errors.email) { %>
                                                        <div class="text-danger">
                                                            <%= errors.email.msg %> 
                                                        </div>
                                                    <% } %>    
                                                </div>
                                                        <div class="input-group mb-3">
                                                            <div class="validatePassword validationError"></div>
                                                            <label for="password">Contraseña</label>
                                                            <input type="password" name="passwordd" id="passwordd" class="form-control"
                                                                id="password" value="" required>
                                                                <div class="validateEmail validationError"></div>
                                                            <div class="input-group-append">
                                                                <div class="input-group-text">
                                                                    <span class="fas fa-lock"></span>
                                                                </div>
                                                            </div>
                                                            <% if (locals.errors && errors.passwordd) { %>
                                                                <div class="text-danger">
                                                                    <%= errors.passwordd.msg %> 
                                                                </div>
                                                            <% } %>   
                                                        </div>                                            
                                                                <div class="input-group mb-3">
                                                                    <div class="validatePassword validationError"></div>
                                                                    <input type="password" name="password_confirmation"
                                                                        class="form-control" id="password_confirmation"
                                                                        value="" required>
                                                                     <label for="password_confirmation">Confirma tu
                                                                            contraseña</label>
                                                                    <div class="input-group-append">
                                                                        <div class="input-group-text">
                                                                            <span class="fas fa-lock"></span>
                                                                        </div>
                                                                    </div>
                                                                    <% if (locals.errors && errors.password_confirmation) { %>
                                                                        <div class="text-danger">
                                                                            <%= errors.password_confirmation.msg %> 
                                                                        </div>
                                                                    <% } %>   
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-sm-12">
                                                                        <button type="submit"
                                                                            class="btn btn-primary btn-block btn-flat">Registrarme</button>
                                                                    </div>
                                                                    <!-- /.col -->
                                                                </div>
                            </form>

                            <div class="hr-container">
                                <hr>
                                <label>O</label>
                            </div>

                            <a href="/user/login" class="register">Ya tienes cuenta? Inicia sesión! <i
                                    class="fa fa-arrow-right"></i> </a>


        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    <!-- jQuery 3 -->
    <script src="/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/assets/js/bootstrap.min.js"></script>
    <script>
        $(".input-group input").each(function () {
            if ($(this).val() != "") {
                $(this).addClass('filled');
            } else {
                $(this).removeClass('filled');
            }
        });
        $(".input-group input").change(function () {
            if ($(this).val() != "") {
                $(this).addClass('filled');
            } else {
                $(this).removeClass('filled');
            }
        });
    </script>
    <script src="/assets/js/validationRegister.js"></script>
</body>

</html>