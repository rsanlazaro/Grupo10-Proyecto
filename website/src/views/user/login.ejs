<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Inicio de Sesión</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/assets/css/fontawesome-all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!--bootstrap-->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/assets/css/icheck-bootstrap.min.css">
    <!-- custom style -->
    <link rel="stylesheet" href="/assets/css/auth.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/custom.css">
</head>

<body class="hold-transition login-page auth-background">
    <div class="login-box">
        <div class="login-logo">
            <a href="/"><img src="/assets/img/bdl/logo.png" alt="logo" width="40%"></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Inicia Sesión</p>
            
            <%if(locals.errors){%>
                <div class="alert alert-danger" role="alert">
                    email o contraseña inválida
                </div>
                <%}%>

                    <form action="/user/login" method="POST">

                        <div class="input-group mb-3">
                            <input type="email" name="email" class="form-control" id="email" autocomplete="off"
                                value="<%= locals.oldData ? oldData.email : null %>" required>
                            <label for="email">e-mail</label>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" name="password" class="form-control" id="password" 
                            value="<%= locals.oldData ? oldData.password : null %>" required>
                            <label for="password">Contraseña</label>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="remember" name="rememberme" value="1">
                                    <label for="remember">Recuerdame</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Iniciar Sesión</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    <!-- <a href="" class="forget">Olvidé mi contraseña</a><br> -->

                    <div class="hr-container">
                        <hr>
                        <label>O</label>
                    </div>


                    <a href="./register" class="register">Crear una Cuenta <i class="fa fa-arrow-right"></i> </a>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    <!-- jQuery 3 -->
    <script src="/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/assets/js/bootstrap.min.js"></script>
    <script>
        $(".input-group input").change(function () {
            if ($(this).val() != "") {
                $(this).addClass('filled');
            } else {
                $(this).removeClass('filled');
            }
        });
    </script>
</body>

</html>